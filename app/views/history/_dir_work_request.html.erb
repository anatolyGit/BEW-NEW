		<tr>
			<td>
				<div class="t_ht"><div class="txt"><label>担当名:</label></div></div>
			</td>

			<td>
				<div class="d2_ht">
					<div class="txt">
						<%= pa_link.work.charge_name %> 
					</div>
				</div>
			</td>

			<td>
				<div class="t_ht"><div class="txt"><label>リリース日：</label></div></div>
			</td>

			<td>
				<div class="d2_ht">
					<div class="txt">  
						<%= time_format( pa_link.work.release_date ) %>
					</div>
				</div>
			</td>
		</tr>

		<tr>
			<td>

<hr class="popup">

<h2 class="popup">
	<%= image_tag 'popup/tit_h2_new_project.gif', alt: '新規案件内容', width: 113, height: 18 %>
</h2>
	<table>
		<tr>
			<td><div class="t_ht txt"><div class="txt">案件番号：</div></div></td>
			<td><div class="d2_ht txt"><div class="txt"><%= @project.number %></div></div></td>
			<td><div class="t_ht txt"><div class="txt">リリース日：</div></div></td>
			<td><div class="d2_ht txt"><div class="txt"><%= time_format( @project.release_date ) %></div></div></td>
		</tr>
		<tr>
		<td><div class="t_ht"><div class="txt">案件名：</div></div></td>
		<td colspan="3"><div class="d_ht"><div class="txt"><%= @project.name %></div></div></td>
		</tr>
		<tr>
		<td><div class="t_ht"><div class="txt">提出日（札幌）：</div></div></td>
		<td><div class="d2_ht"><div class="txt"><%= time_format( @project.submit_date ) %></div></div></td>
		<td><div class="t_ht"><div class="txt">テストアップ：</div></div></td>
		<td><div class="d2_ht"><div class="txt"><%= time_format( @project.testup ) %></div></div></td>
		</tr>
		<tr>
		<td><div class="t_ht"><div class="txt">見込み工数：</div></div></td>
		<td colspan="3"><div class="d_ht"><div class="txt"><%= @project.estimation %>h</div></div></td>
		</tr>
		<tr>
			<td><div class="t_ht"><div class="txt">対象URL：</div></div></td>
			<td colspan="3">
				<div class="d_ht">
					<div class="txt">
						<%= @project.urls %>
					</div>
				</div>
			</td>
		</tr>
		<tr>
		<td><div class="t_ht"><div class="txt">作業内容：</div></div></td>
		<td colspan="3"><div class="d_ht"><div class="txt"><%= @project.content %></div></div></td>
		</tr>
		<tr>
		<td><div class="t_ht"><div class="txt">添付：</div></td>
		<td colspan="3">
			<div class="d_ht"><div class="txt">
				<% unless @project.file_name.blank? %> 
					<div class="file1">
						・ <a href="<%= @project.attached_file %>">
							<%= @project.file_name %>
						  </a>
					</div>
				<% end %> 
			</div></div>
		</td>
		</tr>
</table>


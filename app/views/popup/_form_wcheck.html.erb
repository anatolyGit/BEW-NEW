<h2 class="popup">
	<%= image_tag 'popup/tit_h2_wcheck.gif', alt: 'Wチェック', width: 113, height: 18 %>
</h2>

<%= form_for(@new_action , :remote => true, html: { id: 'image-form', multipart: true }) do |f| %>
	 <%= hidden_field_tag :project_id, @project.id %>
	 <%= hidden_field_tag :pa_link_id, @project.pa_links.last.id %>
	 <%= hidden_field_tag :track, @start_time %>
	 <%= f.hidden_field :charge_name, value: @project.pa_links.work_charge.work.charge_name %>
	<table>
		<tr>
			<td>
				<div class="t_ht"><div class="txt"><%= f.label :check_name, '担当名:' %></div></div>
			</td>

			<td>
				<div class="d_ht">
					<div class="frm"> 
						<%= f.text_field :check_name %> 
					</div>
				</div>
			</td>
		</tr>

		<tr>
				<td>
					<div class="t_ht"><div class="txt"><%= f.label :contact, '修正事項:' %></div></div>
				</td>

				<td>
					<div class="d_ht">
						<div class="frm"> 
							<%= f.text_area :contact%> 
						</div>
					</div>
				</td>
		</tr>
		<tr>
			<td><div class="t_ht"><div class="txt"><label>添付：</label></div></div></td>
			<td>
				<div class="d_ht">
					<div class="frm">
						<%= f.file_field :attached_file %>
					</div>
				</div>
			</td>
		</tr>
	</table>
<!-- Radio -->
<div class="innerStepRadio clearfix">
	<div id="sts">
	    <%= f.label '進捗：' %>
	    <label>
	      <%= radio_button_tag :process, 'テストアップ' %>
	      <p class="nam">チェックOK</p>
	    </label>

	    <label>
	      <%= radio_button_tag :process, '修正アリ' %>
	      <p class="nam">修正アリ</p>
	    </label>
	     <span id="p_error">Please check!</span>
	</div>
</div>

<%= render partial:"popup/form_btn", locals: {f: f}%>   
<% end %>

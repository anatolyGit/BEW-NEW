$.extend($.idealforms.filters, {
  datehour: {
    regex: function(_, value) {
             var format = /^(\d{2})-(\d{2})-(\d{2})-(\d{2})$/;
             var res = format.exec(value);
             if (res == null) { return false; }

             var year = 2000 + parseInt(res[1]), mon = parseInt(res[2]), day = parseInt(res[3]), hour = parseInt(res[4]);
             var date = new Date(year, mon - 1, day, hour); 
             
             if ((date.getFullYear() == year) &&
                 (date.getMonth() == mon - 1) &&
                 (date.getDate() == day) &&
                 (date.getHours() == hour)) {
               return true;
             } else {
               return false;
             }
           },
    error: 'yy-mm-dd-hhで入力してください。'
  },
  estimation: {
    regex: function(_, value) {
             if (value.match(/^\d+(\.\d{0,2})?$/)) {
               return true;
             } else {
               return false;
             }
           },
    error: '小数点以下は2桁です。'
  },
  check_number:
  {
     regex: function(_, value) {
            var flag = true;        
            $.ajax(
              {
                url:  '/projects/check_number',
                data: {number: value},
                method: 'GET',
                async: false,
                success: function(result)
                {                     
                    if ( result == "true")                                        
                      flag = true;
                    else                      
                      flag = false;   
                }
              } 
            );   
            return flag;
          },

    error: '案件番号を入力してください。'
  }
})

